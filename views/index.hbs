<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!--    <link rel="stylesheet" href="/public/css/bootstrap.min.css">-->
    <link rel="stylesheet" href="/public/css/theme.css">
    <title>Unsplash Gallery</title>


</head>
<body class="container-fluid">
<div class="p-5 bg-light">
    <h1 class="display-4">
        Unsplash Gallery
    </h1>
    <span class="text-end blockquote-footer fst-italic">
                By Ndi Dodley
            </span>
</div>
<div class="grid ">
    <div class="row">
        {{#each results}}
            <div class="d-flex justify-content-center item col-md-6 col-lg-4 mb-3">
                <a href="{{links.html}}" target="_blank">
                    <img src="{{urls.small}}" alt="{{alt_description}}"
                         title="{{description}}" class="img-fluid rounded-2">
                </a>
            </div>
        {{/each}}
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="/public/scripts/masonry.pkgd.min.js" defer></script>
<script>
    $(window).on('load', function () {
        let grid = $('.grid').masonry({
            percentPotential: true,
            itemSelector: '.item',
        })
        grid.masonry('layout');
    });
</script>
</body>
</html>